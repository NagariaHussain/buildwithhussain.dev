<Layout title="#BuildWithHussain">
  <Hero />

  <AboutMeSection />

  <PageSection id="schedule">
    <SectionHeading>Schedule</SectionHeading>
    <UpcomingEpisodesList />
  </PageSection>

  <PageSection>
    <RegistrationForm />
  </PageSection>

  <PageSection>
    <SectionHeading>Episodes</SectionHeading>

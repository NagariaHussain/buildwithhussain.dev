---
import Link from "./Link.astro";
import { beginnerResources } from "../data/constants";
---

<ul
  class="space-y-8 md:space-y-5 lg:space-y-0 mt-12 lg:grid lg:grid-cols-2 lg:items-start lg:gap-6"
>
  {
    beginnerResources.map((resource) => (
      <li class="space-y-1 md:space-y-0 lg:max-w-sm">
        <Link link={resource.link} title={resource.title} />
      </li>
    ))
  }
</ul>

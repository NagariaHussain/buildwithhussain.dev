---
import Link from "../components/Link.astro";
import PageSection from "../layouts/PageSection.astro";
import SectionHeading from "./SectionHeading.astro";
import { frappeverseLinks } from "../data/constants";
---

<PageSection>
  <SectionHeading>Frappeverse</SectionHeading>

  <div
    class="mt-12 space-y-24 md:grid md:grid-cols-2 xl:grid-cols-3 md:items-start md:justify-between md:space-y-0 md:gap-y-14 md:gap-x-14"
  >
    <!-- Iterate over frappeverseLinks and render as above -->
    {
      Object.keys(frappeverseLinks).map((category) => (
        <div class="space-y-8 col-span-1">
          <div class="flex items-center space-x-3">
            <h3 class="uppercase text-green-900 font-bold text-sm">
              {category}
            </h3>

            <div class="h-[1px] w-10 bg-green-900" />
          </div>

          <div class="space-y-4">
            {frappeverseLinks[category].map((link) => (
              <Link link={link.link} title={link.title} />
            ))}
          </div>
        </div>
      ))
    }
  </div>
</PageSection>
